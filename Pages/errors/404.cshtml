@page
@{
    ViewData["Title"] = "Oops! Page Not Found";
}

<div class="container text-center" style="max-width: 700px; margin: 50px auto;">
    <img src="/images/oops_capybara.png" alt="Oops! Image" style="max-width: 100%; height: 200px; border-radius: 10px; margin-bottom: 20px;" />

    <h1 style="font-size: 36px; font-weight: bold; color: #333;">Oops! Something went wrong.</h1>
    <p style="font-size: 16px; color: #555;">We couldn’t find the page you were looking for. It might have been removed, renamed, or temporarily unavailable.</p>

    <p style="font-size: 14px; color: #888;">Error: <strong>404 - Page Not Found</strong></p>

    <a href="https://localhost:7257" class="btn btn-primary btn-lg" style="margin-top: 20px; padding: 10px 25px; font-size: 16px; border-radius: 25px;">
        Return to Homepage
    </a>
</div>


