@page
@model WebApplication1.Pages.Account.EmailTwoFactorModel
@{
    ViewData["Title"] = "Two-Factor Authentication - Email";
}

<h2>Two-Factor Authentication</h2>
<p>Please check your email for your security code and enter it below.</p>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info">@Model.Message</div>
}

<form method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label asp-for="Input.Code" class="form-label">Security Code</label>
        <input asp-for="Input.Code" class="form-control" />
        <span asp-validation-for="Input.Code" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Verify</button>
</form>

<form method="post" asp-page-handler="Resend" class="mt-3">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-secondary">Resend Code</button>
</form>
